{
    "id": "http-kolide",
    "name": "Kolide",
    "type": "http",
    "group": "example",
    "score_weight": 1,
    "definition": {
        "reportmatchedcontent": ".{{reportmatchedcontent}}",
        "requests": [
            {
                "host": "{{.Host}}",
                "path": "/api/v1/kolide/login",
                "https": true,
                "port": 8000,
                "method": "POST",
                "headers": {
                    "Content-Type": "application/json"
                },
                "body": "{\"username\": \"{{.Username}}\", \"password\": \"{{.Password}}\"}",
                "matchcode": true,
                "matchcontent": true,
                "contentregex": "\"token\": \"([^\"]+)\"",
                "storevalue": true
            },
            {
                "host": "{{.Host}}",
                "path": "/api/v1/kolide/labels",
                "https": true,
                "port": 8000,
                "method": "GET",
                "headers": {
                    "Authorization": "Bearer {{.SavedValue}}"
                },
                "matchcode": true,
                "matchcontent": true,
                "contentregex": "\"count\": {{.HostCount}},"
            }
        ]
    }
}
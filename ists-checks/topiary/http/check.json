{
    "id": "http-topiary",
    "name": "topiary - HTTP",
    "type": "http",
    "group": "${TEAM}",
    "score_weight": 1,
    "definition": {
        "requests": [
            {
                "host": "{{.Host}}",
                "path": "/purchase.php",
                "method": "POST",
                "headers": {
                    "Content-Type": "application/x-www-form-urlencoded"
                },
                "body": "firstname={{.FirstName}}&lastname={{.LastName}}&email={{.Email}}&prodid={{.ProdID}}&ccnum={{.CCNum}}&cvv={{.CVV}}&submit=Submit",
                "matchcode": true,
                "matchcontent": true,
                "contentregex": "<h4>Your order number is: </h4><h4 id=\"newordernumber\">(\\d+)</h4>",
                "storevalue": true
            },
            {
                "host": "{{.Host}}",
                "path": "/orders.php",
                "method": "POST",
                "headers": {
                    "Content-Type": "application/x-www-form-urlencoded"
                },
                "body": "orderid={{.SavedValue}}&search=Search+Orders",
                "matchcode": true,
                "matchcontent": true,
                "contentregex": "<h4> Order Info </h4><p>Order id: {{.SavedValue}}</p><p>Name on order: Joe Biden</p><p>Contact email: press@joebiden.com</p><p>Product ID: 1</p><p>Product Name: Stolen Government Documents</p><p>Credit Card Number: 1337</p><p>CVV/CVC Number: 420</p>"
            }
        ]
    }
}
